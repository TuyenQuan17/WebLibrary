@model MessageModel

@{
    Layout = "_AdminLayout";
}

<h1 class="mb-5 py-3 text-white" style="background-color: #3a393f ">TIN NHẮN CHƯA ĐỌC</h1>
<div class="mx-5">
    <a href="/Admin/AllMessages" class="btn btn-success my-4 float-end">đọc tin nhắn</a>

    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark">
            <tr>
               <th>TÊN NGƯỜI DÙNG</th>
                <th>TIN NHẮN</th>
                <th>NGÀY</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var message in Model.Messages)
            {
                <tr>
                    <td>@message.User.UserName</td>
                    <td>@message.Text</td>
                    <td>@message.Date.GetDateTimeFormats()[0]</td>
                    <td><a href="/Admin/DeleteMessage/@message.Id" class="btn btn-sm btn-danger">Đọc</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>