@model MessageModel

@{
    Layout = "_AdminLayout";
}

<h1 class="mb-5 py-3 text-white" style="background-color: #3a393f ">ĐỌC TIN NHẮN</h1>
<div class="mx-5">
    <a href="/Admin/Messages" class="btn btn-success my-4 float-end">Tin nhắn chưa đọc</a>

    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>TÊN TÀI KHOẢN</th>
                <th>TIN NHẮN</th>
                <th>LỊCH SỬ</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var message in Model.Messages)
            {
                <tr>
                    <td>@message.User.UserName</td>
                    <td>@message.Text</td>
                    <td>@message.Date.GetDateTimeFormats()[0]</td>
                    <td><a href="/Admin/DeletedMessage/@message.Id" class="btn btn-sm btn-danger">xóa bỏ</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>