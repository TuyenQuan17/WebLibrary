@model TypeModel

@{
    Layout = "_AdminLayout";
}

<h1 class="py-3 text-white" style="background-color: #3a393f ">THÊM LOẠI SÁCH</h1>
<div class="mx-5 mt-4">
    <form asp-action="AddType" asp-controller="Admin" method="post">
        <div class="mb-3 form-group">
            <label asp-for="Type.Name" class="form-label">Thể loại sách</label>
            <input type="text" class="form-control" asp-for="Type.Name">
            <span class="form-text text-danger" asp-validation-for="Type.Name"></span>
        </div>
        <div class="text-center"><button type="submit" class="btn btn-primary">Thêm</button></div>
    </form>
</div>