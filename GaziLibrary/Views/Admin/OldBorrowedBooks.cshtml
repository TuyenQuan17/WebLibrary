@model BorrowedBookModel

@{
    Layout = "_AdminLayout";
}

<h1 class="py-3 text-white" style="background-color: #3a393f ">SÁCH MUA TRƯỚC</h1>
<div class="mx-5">
    <a href="/Admin/BorrowedBooks" class="btn btn-success my-4 float-end">sách mượn</a>

    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>TÊN NGƯỜI DÙNG</th>
                <th>ĐÃ NHẬN SÁCH</th>
                <th>NGÀY NHẬN</th>
                <th>NGÀY TRẢ LẠI</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var borrowedBook in Model.BorrowedBooks)
            {
                <tr>
                    <td>@borrowedBook.User.UserName</td>
                    <td>@borrowedBook.Book.Name</td>
                    <td>@borrowedBook.BorrowDate.GetDateTimeFormats()[0]</td>
                    <td>@borrowedBook.ReturnDate.GetDateTimeFormats()[0]</td>
                    <td><a href="/Admin/DeleteBorrowedBook/@borrowedBook.Id" class="btn btn-danger btn-sm">Xóa</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>